name: k8s-preflight
description: Incus profile for Kubernetes with some extra device maps
devices:
  apparmor-disable1:
    path: /sys/module/nf_conntrack/parameters/hashsize
    source: /sys/module/nf_conntrack/parameters/hashsize
    type: disk
  apparmor-disable2:
    path: /sys/fs/bpf
    source: /sys/fs/bpf
    type: disk
  apparmor-disable3:
    path: /proc/sys/net/netfilter/nf_conntrack_max
    source: /proc/sys/net/netfilter/nf_conntrack_max
    type: disk
  apparmor-disable4:
    path: /boot/config-6.8.0-41-generic
    source: /boot/config-6.8.0-41-generic
    type: disk
  apparmor-disable5:
    path: /lib/modules/6.8.0-41-generic
    source: /lib/modules/6.8.0-41-generic
    type: disk
  eth0:
    name: eth0
    nictype: bridged
    parent: incusbr0
    type: nic
  kmsg:
    path: /dev/kmsg
    source: /dev/kmsg
    type: unix-char
  root:
    path: /
    pool: data-incus
    type: disk
